				@Html.ActionLink("Back to List", "Index")
			</div>
		</div>
		<div class="span3">
			<div>
				<div id="ChatWithOthers" style="width:100%" class="btn">No Other Users online</div>
			</div>
			<div class="" style="width:100%;">
				asdf
			</div>
